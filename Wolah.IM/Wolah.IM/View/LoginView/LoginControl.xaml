<UserControl x:Class="Wolah.IM.View.LoginView.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wolah.IM.View.LoginView"
             xmlns:cus="clr-namespace:Wolah.IM.CustomControl"
             mc:Ignorable="d" 
              Width="360"  Height="450">
    <Grid Height="400" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="LoginTextBlock" Text="Login" FontSize="40" VerticalAlignment="Center"></TextBlock>
        <StackPanel Grid.Row="1">
            <cus:AccountControl Height="36" Width="280" Margin="0,10,0,10"></cus:AccountControl>
            <cus:PasswordControl Height="36" Width="280"></cus:PasswordControl>

        </StackPanel>
    </Grid>
</UserControl>
