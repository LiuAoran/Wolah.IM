<UserControl x:Class="Wolah.IM.CustomControl.FormTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wolah.IM.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="240">
    <Grid>
        <TextBox x:Name="TextBox" Style="{StaticResource AccountTextBoxStyle}" Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay}" ></TextBox>
        <TextBlock IsHitTestVisible="False" Text="{Binding Watermark, RelativeSource={RelativeSource AncestorType=UserControl}}"  Visibility="{Binding ElementName=TextBox, Path=Text, Converter={StaticResource StringToVisibilityConverter}}" VerticalAlignment="Center" FontSize="14" Margin="20,0,0,0" Foreground="#BBB"></TextBlock>
    </Grid>
</UserControl>

